[Unit]
Description=Mirror Retention
After=local-fs.target

[Service]
Type=oneshot
EnvironmentFile=/etc/vision-gw.env
ExecStart=/bin/bash ${GATEWAY_HOME}/scripts/mirror-retention.sh
ProtectSystem=strict
PrivateTmp=true
ReadWritePaths=/srv/vision_mirror /run
NoNewPrivileges=true
CapabilityBoundingSet=CAP_SYS_ADMIN

[Install]
WantedBy=multi-user.target